<li id="<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.user_gravatar), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span> |
  <% if micropost.user.current_user?(current_user) %>
    <%= link_to t("delete"), micropost, method: :delete, data: { confirm: t("you_sure") } %>
  <% end %>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <p><%= t("post") %></p> <%= time_ago_in_words(micropost.created_at) %>
    <p><%= t("ago")%></p>
  </span>
</li>
